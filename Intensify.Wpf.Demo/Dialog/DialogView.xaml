<UserControl
    x:Class="Intensify.Wpf.Demo.Dialog.DialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intensify.Wpf.Demo.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ViewModelLocator.AutoAware="True"
    mc:Ignorable="d">
    <Grid>

        <UniformGrid Columns="1">
            <Button
                Width="100"
                Height="25"
                Click="popup_show_Click"
                Content="dialog show" />

            <Button
                Width="100"
                Height="25"
                Click="popup_Click"
                Content="dialog" />
        </UniformGrid>

    </Grid>
</UserControl>
